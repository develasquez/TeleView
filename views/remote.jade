doctype html
html
  head
    meta(charset='utf-8')
    title Tele
    meta(name='HandheldFriendly', content='True')
    meta(name='MobileOptimized', content='320')
    meta(name='viewport', content='width=device-width, initial-scale=1,user-scalable=no')
    meta(name='mobile-web-app-capable', content='yes')
    link(href='/stylesheets/monomer.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
    script(src='/javascripts/vendor/jquery-2.1.3.min.js')
    script(src='/javascripts/vendor/pointerevents.js', type='text/javascript')
    script(src='/javascripts/vendor/monomer.js', type='text/javascript')
    script(src='/socket.io/socket.io.js', type='text/javascript')
    script(src='/javascripts/mainRemoto.js', type='text/javascript')
    script(src="https://apis.google.com/js/client.js?onload=init")
    script(src='javascripts/cast.js', type='text/javascript')
    meta(http-equiv='Cache-Control', content='no-cache')
    meta(http-equiv='Pragma', content='no-cache')
    meta(http-equiv='Expires', content='0')
  body
    nav.leftMenu.z-d1.background_control
      ul.list.advanced
        li(onclick="monomer.pageShow('#cast');")
          div
            div.test_box.fab.z-d1
              i.icon-desktop.icon-1x.icon-black
          div
            div
              h3 Share Screen
              p Screen Mirroring (No Audio)
        li(onclick="monomer.pageShow('#Remoto');")
          div
            div.test_box.fab.z-d1
              i.icon-play-circle.icon-1x.icon-black
          div
            div
              h3 Canales
              p Lista Canales
        li(onclick="monomer.pageShow('#youtube');")
          div
            div.test_box.fab.z-d1
              i.icon-youtube.icon-1x.icon-black
          div
            div
              h3 YouTube
              p Buscar en Youtube
        li(onclick="openMovie();")
          div
            div.test_box.fab.z-d1
              i.icon-film.icon-1x.icon-black
          div
            div
              h3.controlTitle Pelicula
              p.controlDetalle URL de Pelisplus
        li(onclick="stopVideo();")
          div
            div.test_box.fab.z-d1
              i.icon-pause.icon-1x.icon-black.control
          div
            div
              h3.controlTitle Pause
              p.controlDetalle Detener Video
    #urlPelicula.modal-dialog.fade.card.background_control.z-d3
      .header
        h2.color-light-blue.center Ver Pelicula
      input#txtUrlPelicula(type='text')
      button.raised-button.green.color-white(onclick='playMovie();') Reproducir
    #youtube.page
      .header.green.z-d1
        button.expand-LeftMenu.button-left.icon-bars.icon-1x.icon-white(arrows-alt='')
        h3.color-white RemoTube
        input#txtBuscar.search-input(type='search', autofocus='')
      .content
        ul#info.list.advanced.divider
        br
        button#btnBuscar.floating-button.floating-down-right.green.expand-search(onclick='buscarVideos();')
          i.icon-search.icon-white
    #Remoto.page
      .header.green.z-d1
        button.expand-LeftMenu.button-left.icon-bars.icon-1x.icon-white(arrows-alt='')
        h3.color-white Control Remoto
      .content
        ul#canales.list.advanced.divider
    #peliculas.page
      .header.green.z-d1
        button.expand-LeftMenu.button-left.icon-bars.icon-1x.icon-white(arrows-alt='')
        h3.color-white Peliculas
        input#txtBuscarMovies.search-input(type='search', autofocus='')
      .content
        ul#Movies.list.advanced.divider
        br
        button#btnBuscarMovies.floating-button.floating-down-right.green.expand-search(onclick='buscarPeliculas();')
          i.icon-search.icon-white
